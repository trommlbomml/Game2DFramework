<?xml version="1.0" encoding="utf-8" ?>
<Frame Title="ScrollViewer">
  <ScrollViewer CanScrollHorizontally="False" CanScrollVertically="True" Height="200">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>
      <TextBlock Text="Peters Game" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" />
      <TextBlock Text="1/4" Grid.Column="1" Grid.Row="0" />
      <Button Grid.Column="2" Grid.Row="0">
        <TextBlock Text="Join" />
      </Button>

      <TextBlock Text="Hanni" Grid.Column="0" Grid.Row="1" Margin="2" HorizontalAlignment="Left"/>
      <TextBlock Text="3/4" Grid.Column="1" Grid.Row="1" Margin="2"/>
      <Button Grid.Column="2" Grid.Row="1" Margin="2">
        <TextBlock Text="Join" />
      </Button>

      <TextBlock Text="Test" Grid.Column="0" Grid.Row="2" Margin="2" HorizontalAlignment="Left"/>
      <TextBlock Text="3/4" Grid.Column="1" Grid.Row="2" Margin="2"/>
      <Button Grid.Column="2" Grid.Row="2" Margin="2">
        <TextBlock Text="Join" />
      </Button>

      <TextBlock Text="Blubb" Grid.Column="0" Grid.Row="3" Margin="2" HorizontalAlignment="Left"/>
      <TextBlock Text="4/4" Grid.Column="1" Grid.Row="3" Margin="2"/>
      <Button Grid.Column="2" Grid.Row="3" Margin="2">
        <TextBlock Text="View" />
      </Button>

      <TextBlock Text="DeathDay" Grid.Column="0" Grid.Row="4" Margin="2" HorizontalAlignment="Left"/>
      <TextBlock Text="2/4" Grid.Column="1" Grid.Row="4" Margin="2"/>
      <Button Grid.Column="2" Grid.Row="4" Margin="2">
        <TextBlock Text="Join" />
      </Button>

      <TextBlock Text="HollowMan" Grid.Column="0" Grid.Row="5" Margin="2" HorizontalAlignment="Left"/>
      <TextBlock Text="1/4" Grid.Column="1" Grid.Row="5" Margin="2"/>
      <Button Grid.Column="2" Grid.Row="5" Margin="2">
        <TextBlock Text="Join" />
      </Button>
    </Grid>
  </ScrollViewer>
</Frame>