<?xml version="1.0" encoding="utf-8" ?>
<Frame Title="Input Boxes">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" Text="First Input" Margin="5" />
    <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Width="150" />
    <TextBlock HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Text="Second Input" Margin="5" />
    <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Width="150"/>
    <TextBlock HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0" Text="Third Input" Margin="5" />
    <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Width="150" />
  </Grid>
</Frame>